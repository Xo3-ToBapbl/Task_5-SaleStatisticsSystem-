@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detail Statistics</title>
</head>
<body>
    <div>@Html.ActionLink("Back", "ManagerPage")</div>
    <h4>@ViewBag.Message</h4>
    <div>
        @using (Ajax.BeginForm("FiltredStatistic", new AjaxOptions { UpdateTargetId = "filtredSalesResult" }))
        {
            @Html.ValidationSummary(true)
            @Html.Label("Filter type:")
            <br />
            @Html.DropDownList("filter", new SelectList(StatisticSystem.PL.Utills.Filtres.DetailStatisticFiltres))
            <br />
            @Html.Label("Filter value:")
            <br />
            @Html.Editor("filterValue", new { htmlAttributes = new { placeholder = "01.01.2017" } })
            <input type="submit" value="Filter" />
        }        
    </div>

    <div id="filtredSalesResult"></div>
    
  
</body>
</html>