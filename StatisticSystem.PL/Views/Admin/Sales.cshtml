@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sales</title>
    @Styles.Render("~/Content/Site.css")
</head>
<body>
    <div>@Html.ActionLink("Back", "AdminPage")</div>
    <h4>Select filter to display sales</h4>
    <h4>@ViewBag.Message</h4>
    <div>
        @using (Ajax.BeginForm("FiltredSales", new AjaxOptions { UpdateTargetId = "filtredSalesResult" }))
        {
            @Html.Hidden("managerId", (string)ViewBag.ManagerId)
            @Html.Label("Filter type:")
            <br />
            @Html.DropDownList("filter", new SelectList(StatisticSystem.PL.Utill.DropDownLists.SaleFiltres))
            <br />
            @Html.Label("Filter value:")
            <br />
            @Html.Editor("filterValue", new { htmlAttributes = new { placeholder = "01.01.2017" } })
            <input type="submit" value="Filter" />
        }
    </div>

    <div id="filtredSalesResult"></div>
</body>
</html>