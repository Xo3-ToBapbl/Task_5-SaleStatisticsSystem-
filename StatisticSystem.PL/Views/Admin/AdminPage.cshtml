@using StatisticSystem.PL.Helpers
@model StatisticSystem.PL.Models.IndexViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminPage</title>
</head>
<body>
    <div> 
        <h1>Hello @ViewBag.Name admin!</h1> 
    </div>
    <table>
        <tr>
            <td> Manager second name</td>
            <td>See details</td>
            <td>Edit profile</td>
            <td>Delete</td>
        </tr>
        @foreach (var item in Model.ManagerProfiles)
        {
            <tr>
                <td>@item.SecondName</td>
                <td><a href="/Home/Details?Id=@item.Id">Details</a></td>
                <td><a href="/Home/Edit?Id=@item.Id">Edit</a></td>
                <td><a href="/Home/Delte?Id=@item.Id">Delete</a></td>
            </tr>
        }
    </table>
    <br />
    <div>
        @Html.PageLinks(Model.PageInfo, x => Url.Action("AdminPage", new { page = x }))
    </div>
</body>
</html>
